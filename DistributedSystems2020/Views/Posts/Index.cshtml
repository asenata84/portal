@model IEnumerable<DistributedSystems2020.Models.PostModel>

@{
    ViewBag.Title = "Posts";
}

<h2>Posts</h2>
<hr/>
<div class="row">
    @using (Html.BeginForm("Index", "Posts", FormMethod.Get))
    {
        <div class="col-md-3">
            <button type="button" class="btn btn-success text-primary">
                @Html.ActionLink("Create new post", "Create")
            </button>
        </div>    
        <div class="col-md-3">
            @Html.TextBox("author", "", new { @class = "form-control", @placeholder = "Author" })
        </div>
        <div class="col-md-3">
            @Html.TextBox("title", "", new { @class = "form-control", @placeholder = "Search" })
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-info">
                Show
            </button>
        </div>
    }
</div>
<hr/>
<div class="table">

    @foreach (var item in Model)
    {
        <div class="post-wrapper">
            <h3>
                @Html.DisplayFor(modelItem => item.Title)
            </h3>
            <h4>
                By @Html.DisplayFor(modelItem => item.Author)
            </h4>
            <p>
                @Html.DisplayFor(modelItem => item.Text)
            </p>
            <div>
                &nbsp;&nbsp;
                @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "glyphicon glyphicon-eye-open" }) &nbsp;&nbsp;
                @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-pencil" }) &nbsp;&nbsp;
                @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash", onclick = "return confirm('Are you sure you want to remove the post?');" })
            </div>
        </div>
    }

</div>
